#include <cmath>
#include <iostream>

int main() {
    int a, b, c;
    float x, x1, x2, d;
    int const1{ 2 }, const2{ 4 };
    {
        std::cout << "Please enter a value for variables A, B, C in the range from "
            "2 to 255\n";
        std::cout << "The value for A = ";
        std::cin >> a;
        if (a == 0 || a < 2 || a > 255)
            std::cout << "You entered an invalid number. Repeat the value A in the "
            "range of 2 to 255.\n";
        else
            std::cout << "The value for B = ";
        std::cin >> b;
        if (b == 0 || b < 2 || b > 255)
            std::cout << "You entered an invalid number. Repeat the value B in the "
            "range of 2 to 255.\n";
        else
            std::cout << "The value for C = ";
        std::cin >> c;
        if (c == 0 || c < 2 || c > 255)
            std::cout << "You entered an invalid number. Repeat the value C in the "
            "range of 2 to 255.\n";
        d = (b * b) - (const2 * a * c);
        if (d < 0)
            std::cout << "Equation has no solution \n";
        if (d > 0) {
            b = -b;
            std::cout << "First root of the equation x1= " << x1 =
                (b + sqrt(d)) / (const1 * a) << std::endl;
            std::cout << "Second root of the equation x2= " << x2 =
                (b - sqrt(d)) / (const1 * a) << std::endl;
        }
        if (d == 0) std::cout << "The root of the equation x= " << x = -(b / (const1 * a) << std::endl;
    }
    return 0;
}
