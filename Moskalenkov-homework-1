#include <cmath>
#include <iostream>

int main() {
    std::cout << "Enter any integer, from -100 to +100, except 0: " << std::endl;
    int a;
    std::cin >> a;
    if (a == 0 || a < -100 || a > 100)
        std::cout << "The number entered is incorrect. Start over" << std::endl;
    else
        std::cout << "The number entered is correct" << std::endl;

    std::cout << "Enter any integer, from -100 to +100, except 0: " << std::endl;
    int b;
    std::cin >> b;
    if (b == 0 || b < -100 || b > 100)
        std::cout << "The number entered is incorrect. Start over" << std::endl;
    else
        std::cout << "The number entered is correct" << std::endl;

    std::cout << "Enter any integer, from -100 to +100, except 0: " << std::endl;
    int c;
    std::cin >> c;
    if (c == 0 || c < -100 || c > 100)
        std::cout << "The number entered is incorrect. Start over" << std::endl;
    else
        std::cout << "The number entered is correct" << std::endl;

    int D;

    D = (b * b) - (4 * a * c);

    std::cout << "D=" << D << std::endl;
    double x1;
    double x2;

    x1 = (-b + sqrt(D)) / (2 * a);
    x2 = (-b - sqrt(D)) / (2 * a);

    if (D > 0) {
        std::cout << "X1=" << x1 << std::endl;
        std::cout << "X2=" << x2 << std::endl;
    }

    else if (D == 0)
        std::cout << "X1=X2=" << x1 << std::endl;

    else
        std::cout << "The equation has no roots" << std::endl;

    return 0;
}
